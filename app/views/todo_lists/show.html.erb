
<div class='card-header d-flex justify-content-between'>
  <div>
    <h3><b><%= @todo_list.title %></b></h3>
    <p class='text-secondary'><small>100% Compmlete (12/12 Todo items)</small></p>
  </div>
<%= link_to 'Edit' , edit_todo_list_path(@todo_list), class: 'btn btn-secondary btn-sm'%>
</div>

<ul class="list-group">
   <% @todo_list.todo_items.each do |todo_item| %>
     <li class='list-group-item'>
        <div class="d-flex justity-content-beetween">
          <span>
            <%= todo_item.description %>
          </span>
          <%= link_to '#', class: 'btn btn-success' do %>
            <i class='fas fa-check'> </i>
          <% end %>
        </div>
   </li>
  <% end %>
</ul>




